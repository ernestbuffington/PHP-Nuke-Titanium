<table cellpadding="4" cellspacing="1" border="0" class="forumline" style="width: 99%;">
  <tr {DHTML_HAND} {DHTML_ONCLICK}"show({DHTML_ID})">
    <td class="catHead menu" colspan="2" style="height: 35px; font-weight: bold; text-align: center; text-transform: uppercase;">{L_SIG_TITLE}</th>
  </tr>
</table>

<span id="{DHTML_ID}" {DHTML_DISPLAY}>
<table cellpadding="4" cellspacing="1" border="0" class="forumline" style="width: 99%;">
  <!-- Advanced Signature Divider Control -->
  <tr> 
    <td class="row1" style="height: 35px; width: 50%;">
      <!-- {L_SIG_INPUT}<br /><span class="gensmall">{L_SIG_EXPLAIN}</span> -->
      <span style="display: inline-block; float: left; margin-top: 2px;">{L_SIG_INPUT}</span>
      <span class="evo-sprite help tooltip-html float-right" title="{L_SIG_EXPLAIN}"></span>
    </td> 
    <td class="row2" style="height: 35px; width: 50%;"><input type="text" maxlength="255" name="sig_line" style="width: 350px;" value="{SIG_DIVIDERS}" /></td> 
  </tr> 
  <tr>
    <td class="row1" style="height: 35px; width: 50%;">
      <!-- {L_MAX_SIG_LENGTH}<br /><span class="gensmall">{L_MAX_SIG_LENGTH_EXPLAIN}</span> -->
      <span style="display: inline-block; float: left; margin-top: 2px;">{L_MAX_SIG_LENGTH}</span>
      <span class="evo-sprite help tooltip-html float-right" title="{L_MAX_SIG_LENGTH_EXPLAIN}"></span>
    </td>
    <td class="row2" style="height: 35px; width: 50%;"><input class="post" type="text" size="5" maxlength="4" name="max_sig_chars" value="{SIG_SIZE}" /></td>
  </tr>
  <!-- Advanced Signature Divider Control -->
</table>
</span>